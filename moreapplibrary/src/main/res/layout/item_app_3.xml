<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ly_parent"
        app:cardBackgroundColor="@color/whiteplate"
        app:cardCornerRadius="10dp"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >


        <ImageView
            android:id="@+id/imagebig"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:transitionName="img"
            app:srcCompat="@drawable/bg_dialog_2" />

<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_height="wrap_content">



        <TextView
            android:id="@+id/firstTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:fontFamily="@font/roboto"
            android:gravity="start"
            android:text="@string/app_name"
            android:maxLines="1"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp" />


    <TextView
        android:id="@+id/firstDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:fontFamily="@font/roboto"
        android:gravity="start"
        android:text="@string/app_name"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:maxLines="3"
        android:textSize="14sp" />
</LinearLayout>
</LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/native1"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="12dp"
            android:background="@color/grey_bannernativ" />
        <include

            layout="@layout/native_ad_facebook_banner"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="12dp"
            android:background="@color/grey_bannernativ" />

    </LinearLayout>


</LinearLayout>