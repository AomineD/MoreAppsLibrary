<?xml version="1.0" encoding="utf-8"?>
<com.ramotion.foldingcell.FoldingCell xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:folding-cell="http://schemas.android.com/tools"
    android:id="@+id/cellfold"
    android:layout_width="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_marginTop="10dp"
    folding-cell:backSideColor="@color/black"
    folding-cell:cameraHeigh="30"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/cell_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDarkw"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/secondTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/brawler"
                android:gravity="start|center_vertical"
                android:text="Esta abierto ahora bro"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:layout_width="130dp"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                app:cardBackgroundColor="@color/black">

            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/imagebig"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <WebView
                    android:id="@+id/secondDesc"
                    android:layout_width="match_parent"
                    android:layout_height="215dp"
                    android:background="@color/colorPrimaryDarkw"
                    android:fontFamily="@font/brawler"
                    android:gravity="start"
                    android:text="@string/vaina"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@android:color/black"
                    android:gravity="center"
                    android:text="@string/install"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/cell_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorAccentw"
            app:cardCornerRadius="12dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/thumb"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/bg_dialog_2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/firstTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:fontFamily="@font/brawler"
                        android:text="Titulo app"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/firstDesc"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_margin="3dp"
                        android:fontFamily="@font/brawler"
                        android:text="Desarrollador (J-Park) AngerOfStick 2, Anger Of Stick 3, Anger Of Stick 4, Anger Of Stick 5"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </FrameLayout>

</com.ramotion.foldingcell.FoldingCell>